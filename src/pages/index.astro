---
import Layout from '../layouts/Layout.astro';
import PiePagina from '../components/piePagina.astro';
import Encabezado from '../components/encabezado.astro';
---

<Layout title="Bienvenido a Nuestra Página">
  <Encabezado />

  <main class="contenido">
    <section class="bienvenida">
      <h1 class="titulo">¡Bienvenido a Nuestro Sitio!</h1>
    </section>

    <section class="imagen">
      <div class="image-frame">
        <!-- Solo una imagen estática por ahora -->
        <img
          id="carousel"
          src="../../public/oruroFoto.jpg" 
          alt="Descripción de la imagen 1"
          class="imagen-principal"
        />
      </div>

      <!-- Dots del carousel (sin funcionalidad) -->
      <div class="carousel-dots">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </div>
    </section>
  </main>

  <PiePagina />
</Layout>

<style>
  .contenido {
    font-family: 'Arial', sans-serif;
    padding: 20px;
    background-color: #f8f8f8;
    color: #333;
  }

  .bienvenida {
    text-align: center;
    margin-bottom: 30px;
  }

  .titulo {
    font-size: 2.5em;
    color: #007BFF;
  }

  .imagen {
    text-align: center;
    margin-top: 40px;
    position: relative;
  }

  .image-frame {
    width: 100%;
    max-width: 1200px;
    height: 400px;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    margin: 0 auto;
    border: 5px solid #ddd;
  }

  .imagen-principal {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .carousel-dots {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.5);
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .dot:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }

  /* Estilos del loader (si lo deseas en el futuro) */
  .skeleton-loader {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #e0e0e0;
    animation: skeleton 1.5s infinite ease-in-out;
    border-radius: 8px;
  }

  @keyframes skeleton {
    0% {
      background-color: #e0e0e0;
    }
    50% {
      background-color: #f0f0f0;
    }
    100% {
      background-color: #e0e0e0;
    }
  }
</style>
