---
// src/components/Card.astro
const { title, image, description, link } = Astro.props;
---

<div class="card">
  <a href={link} class="card-link">
    <img src={image} alt={title} />
    <h3>{title}</h3>
    <p>{description}</p>
  </a>
</div>

<style>
  .card {
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .card img {
    width: 100%;
    max-width: 300px;
    height: auto;
    border-radius: 8px;
    margin-bottom: 15px;
  }

  .card h3 {
    color: #1f4d77;
    margin: 10px 0;
  }

  .card p {
    color: #555;
    line-height: 1.4;
  }

  .card-link {
    text-decoration: none;
    color: inherit;
  }

  .card:hover {
    transform: translateY(-10px);
  }
</style>
