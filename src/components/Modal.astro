---
const { title, description, imageUrl, onClose } = Astro.props;
---

<div class="modal-overlay" id="modal-overlay">
  <div class="modal-content">
    <button class="close-btn" id="closeBtn">X</button>
    <h2>{title}</h2>
    <img src={imageUrl} alt={title} />
    <p>{description}</p>
  </div>
</div>

<script>
  // Asegúrate de que el DOM esté completamente cargado
  window.addEventListener("load", () => {
    const closeBtn = document.getElementById("closeBtn");
    const modalOverlay = document.getElementById("modal-overlay");

    // Añade el evento al hacer clic en el botón de cierre
    closeBtn.addEventListener("click", () => {
      modalOverlay.style.display = "none";  // Oculta el modal
    });

    // Añadir un evento para cerrar cuando se hace clic fuera del contenido
    modalOverlay.addEventListener("click", (event) => {
      if (event.target === modalOverlay) {
        modalOverlay.style.display = "none";  // Oculta el modal
      }
    });
  });
</script>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
  }

  .modal-content {
    background: white;
    padding: 20px;
    border-radius: 8px;
    max-width: 600px;
    width: 100%;
    text-align: center;
    position: relative;
  }

  .modal-content img {
    width: 100%;
    max-height: 300px;
    object-fit: cover;
    margin-bottom: 20px;
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    border: none;
    background: none;
    font-size: 20px;
    cursor: pointer;
  }

  .close-btn:hover {
    color: red;
  }
</style>
